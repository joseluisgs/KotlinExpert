-- Database Note
CREATE TABLE IF NOT EXISTS NoteEntity (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL ,
    description TEXT NOT NULL,
    type TEXT NOT NULL,
    created_at TEXT NOT NULL
);

-- Queries

removeAll:
DELETE FROM NoteEntity;

selectAll:
SELECT * FROM NoteEntity;

selectById:
SELECT * FROM NoteEntity WHERE id = ?;

-- Hacemos uso de la funci√≥n de SQLite last_id
selectLastInserted:
SELECT * FROM NoteEntity WHERE id = last_insert_rowid();

