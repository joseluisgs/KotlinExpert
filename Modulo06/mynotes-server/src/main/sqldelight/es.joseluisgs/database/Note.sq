insert:
INSERT INTO NoteEntity (title, description, type, created_at) VALUES (?, ?, ?, ?);

update:
UPDATE NoteEntity SET title = ?, description = ?, type = ? WHERE id = ?;

delete:
DELETE FROM NoteEntity WHERE id = ?;